FROM ubuntu:20.04
RUN apt update -y && apt upgrade -y && apt install -y software-properties-common python3 python3-pip python3-lxml libsodium-dev libssl-dev libcrypto++-dev libc-ares-dev \
        libsqlite to 3-dev libfreeimage-dev swig libboost-all-dev git make g++ gcc automake \
        libpthread-stubs0-dev zlib1g-dev libpq-dev libffi-dev

ENV MEGA_SDK_VERSION="4.2.0"
RUN git clone https://github.com/meganz/sdk.git --depth=1 -b v$MEGA_SDK_VERSION ~/home/sdk \
    && cd ~/home/sdk && rm -rf .git \
    && autoupdate -fIv && ./autogen.sh \
    && ./configure --disable-silent-rules --enable-python --with-sodium --disable-examples \
    && make -j$(nproc --all) \
    && cd bindings/python/ && python3 setup.py bdist_wheel \
    && cd dist/ && pip3 install --no-cache-dir megasdk-$MEGA_SDK_VERSION-*.whl
